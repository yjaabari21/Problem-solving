import java.util.*;
public class test{
    public static void main(String[] args)
    {
    Scanner inp = new Scanner(System.in);
    int w = inp.nextInt();
    int x = w - 2;
    int y = w / 2;
    if(w%2==0 && (x%2==0 || y%2 ==0) && w>2)
    {
        System.out.println("YES");
    }
    else
    {
        System.out.println("NO");
    }
     
}
}
