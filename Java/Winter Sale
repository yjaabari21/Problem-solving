import java.util.Scanner;
 
public class Test {
 
    public static void main(String[] args) {
        Scanner scn = new Scanner(System.in);
        double disc = scn.nextInt();
        int num = scn.nextInt();
        double x = (disc/100.00);
        double sale = num / (1 - x);
        System.out.printf("%.2f" , sale);
        }
}
