function sum() {
  let num1 = parseFloat(document.getElementById("inp1").value);
  
  let num2 = parseFloat(document.getElementById("inp2").value);
  
  let Result = num1 + num2;

if (isNaN(num1) | isNaN(num2)) {
    document.getElementById("op").innerText = "PLease Valid Number";
    document.getElementById("op").style.color = "red";
    document.getElementById("op").style.fontSize = '18px';
    document.getElementById("op").style.textTransform = "Capitalize";
  }
  else {
    document.getElementById("op").innerText = Result;
  }
}


function sub() {
  let num1 = parseFloat(document.getElementById("inp1").value);
  
  let num2 = parseFloat(document.getElementById("inp2").value);
  
  let Result = num1 - num2;

  if (isNaN(num1) | isNaN(num2)) {
    document.getElementById("op").innerText = "PLease Valid Number";
    document.getElementById("op").style.color = "red";
    document.getElementById("op").style.fontSize = '18px';
    document.getElementById("op").style.textTransform = "Capitalize";
  }
  else {
    document.getElementById("op").innerText = Result;
  }
}

function multi() {
  let num1 = parseFloat(document.getElementById("inp1").value);
  
  let num2 = parseFloat(document.getElementById("inp2").value);
  
  let Result = num1 * num2;

  if (isNaN(num1) | isNaN(num2)) {
    document.getElementById("op").innerText = "PLease Valid Number";
    document.getElementById("op").style.color = "red";
    document.getElementById("op").style.fontSize = '18px';
    document.getElementById("op").style.textTransform = "Capitalize";
  }
  else {
    document.getElementById("op").innerText = Result;
  }
}

function divide() {
  let num1 = parseFloat(document.getElementById("inp1").value);
  
  let num2 = parseFloat(document.getElementById("inp2").value);
  
  let Result = num1 / num2;

  if (isNaN(num1) | isNaN(num2)) {
    document.getElementById("op").innerText = "PLease Valid Number"
    document.getElementById("op").style.color = "red";
    document.getElementById("op").style.fontSize = '18px';
    document.getElementById("op").style.textTransform = "Capitalize";
  }
  else {
    document.getElementById("op").innerText = Result;
  }
}

function remainder() {
  let num1 = parseFloat(document.getElementById("inp1").value);
  
  let num2 = parseInt(document.getElementById("inp2").value);
  
  let Result = num1 % num2;

if (isNaN(num1) | isNaN(num2)) {
    document.getElementById("op").innerText = "PLease Valid Number"
    document.getElementById("op").style.color = "red";
    document.getElementById("op").style.fontSize = '18px';
    document.getElementById("op").style.textTransform = "Capitalize";
  }
  else {
    document.getElementById("op").innerText = Result;
  }
}
